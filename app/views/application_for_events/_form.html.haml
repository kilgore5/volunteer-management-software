/ = simple_form_for([@current_user, @event, @application]) do |f|
= simple_form_for(@application) do |f|

  .col-md-8.offset-md-2
    / = help
    = f.error_notification
    = f.hidden_field :event_id, value: params[:event_id] ? params[:event_id] : @current_event.id
    = f.hidden_field :user_id, value: @current_user.id
    = f.simple_fields_for @current_user do |f|
      %h5 Contact Details
      %hr
      .inputs.row
        .col-md-6
          = f.input :first_name, autofocus: true, required: true
        .col-md-6
          = f.input :last_name, required: true
        .col-md-6
          = f.input :email, required: true, input_html: { class: "signin-text", autocomplete: 'off' }
        .col-md-6
          = f.input :mobile_number , required: true     
        .col-md-6
          = f.input :birthday , required: true
 
      %h5 Skills / Qualifying Documents
      %p i.e. RSA, PHD in Astrophysics
      %hr
      / .inputs.row
      = f.simple_fields_for :skills do |skill|
      
        = render 'skill_fields', :f => skill
      .inputs.row
        .links.col-md-12
          = link_to_add_association 'add skill', f, :skills   
      %h5 Other Information
      %p Let us know any critical info i.e. allergies, relevant volunteer experience
      %hr
    .inputs.row
      .col-md-12
        = f.input :info, as: :text    

    .actions
      = f.button :submit
