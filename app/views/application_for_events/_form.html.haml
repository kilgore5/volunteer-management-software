/ = simple_form_for([@current_user, @event, @application]) do |f|
- if flash[:error].present?
  #error_explanation
    %p= flash[:error]
= simple_form_for @application, :html=> { class: "application_form" } do |f|

  .col-md-8.col-md-offset-2.panel.default
    / = help
    = f.error_notification
    = f.hidden_field :event_id, value: params[:event_id] ? params[:event_id] : @current_event.id
    = f.hidden_field :user_id, value: @current_user.id
    = f.simple_fields_for :user do |f|
      %h3 About You
      %hr
      .inputs.row
        .col-md-6
          = f.input :first_name, autofocus: true, required: true
        .col-md-6
          = f.input :last_name, required: true
        .col-md-12
          .row
            .col-md-6
              = f.input :email, required: true, input_html: { class: "signin-text", autocomplete: 'off' }, label: "Email (also your account login)"
            .col-md-6
              %label.hidden hidden
              %small.form-text.text-muted this will be used for all correspondence. Please check regularly, including spam folder
        .col-md-6
          = f.input :mobile_number , required: true     
        .col-md-6
          = f.input :birthday , required: true
      = f.simple_fields_for :emergency_contact do |f|
        %p Your Emergency Contact
        / %hr        
        .inputs.row
          .col-md-4
            = f.input :name
          .col-md-4
            = f.input :phone_number
          .col-md-4
            = f.input :relationship
      %p Medical Conditions
      / %hr
      .inputs.row          
        .col-md-12
          = f.input :medical_conditions, label: "Please list any conditions you may have that should be known to the organisers"

    %h3 Shifts
    %hr
    %p Have you...
    .inputs.row
      .col-md-6
        = f.label :volunteered_before, "Volunteered at #{@current_event.name} before?"
        .row
          .col-md-4
            = f.input :volunteered_before, as: :select, include_blank: false, label: false
      .col-md-6
        =f.label :been_before, "Been to #{@current_event.name} before?"      
        .row
          .col-md-4      
            = f.input :been_before, as: :select, include_blank: false, label: false
    .inputs.row
      .col-md-6
        = f.association :preferred_jobs, collection: @current_event.jobs, label: "What type of shifts do you want to do at #{@current_event.name}?"
      .col-md-6
        = f.simple_fields_for :user do |f|
          = f.association :preferred_departments, label: "For general volunteer applications, what is your preferred volunteer department?"            
    %p Why would you like to volunteer?
    .inputs.row
      .col-md-12
        = f.input :info, as: :text, label: "... and what particular skills do you think you can offer? If you have proof, you can upload it below."
    %p Evidence for skills / qualifying documents
    / %hr
    .inputs.row    
      = f.simple_fields_for :user do |f|    
        / .inputs.row
        = f.simple_fields_for :skills do |skill|
        
          = render 'skill_fields', :f => skill
        .inputs
          .links.col-md-12
            %p
              = link_to_add_association '+ add skill', f, :skills
    %p Friends
    / %hr            
    .inputs.row
      .col-md-12
        = f.input :friends_or_referrals, label: "List any friends also applying whom you would like to work with, or any organiser who referred you to the role"
    %h3.inputs.row
      .col-sm-8
        Puchase Volunteer Shirt
      .col-sm-4
        =image_tag "powered_by_stripe.png"
    %hr
    %small.form-text.text-muted All volunteers must purchase their $15 volunteer t-shirt
    %br
    .inputs.row          
      .col-md-12
        = javascript_include_tag "https://js.stripe.com/v2/"
        :javascript
          Stripe.setPublishableKey('#{ENV['STRIPE_PUBLISHABLE_KEY']}');
          console.log(Stripe);

        %span.payment-errors

    .inputs.row          
      .col-md-7
        .form-group  
          %label
            %span Card Number
          %input{"data-stripe" => "number", :type => "text", class: "form-control"}/        
      .col-md-2
        .form-group  
          %label
            %span CVC
          %input{"data-stripe" => "cvc", :size => "4", :type => "text", class: "form-control"}/
      .col-md-3
        .form-group  
          %label
            %span Expiration (MM/YY)
          .form-inline
            %input{"data-stripe" => "exp-month", :size => "2", :type => "text", class: "form-control"}/
            %span /
            %input{"data-stripe" => "exp-year", :size => "2", :type => "text", class: "form-control"}/
      .col-md-12
        %small.form-text.text-muted If you are approved and do not show up to your shift, you will be charged $#{@event.ticket_price_cents / 100}
     
    %hr            
    .inputs.row
      .col-md-12
        = f.input :terms_accepted, label: ("All volunteers must accept the festival #{link_to 'terms', 'data-target' =>'#myModal', 'data-toggle' => 'modal'}").html_safe
    .actions
      .form-group
        = f.button :submit, "Submit"
