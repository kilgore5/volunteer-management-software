= simple_form_for([@current_user, @event, @application]) do |f|
  = f.error_notification

  .inputs
    / = f.input :name
    / = f.input :start_time
    / = f.input :end_time
    / / = f.input :event_length
    / = f.input :ticket_price_cents
    / = f.association :client_owner

  .actions.text-right
    = f.button :submit
