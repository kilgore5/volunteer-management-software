.row
  %ul
    %h3
      = link_to(event.name, event_path(event))
    = link_to "Apply to volunteer", new_user_event_application_for_event_path(current_user.id, event.id), class: "btn btn-primary"
    %li
      = "Start date: "
      = event.start_time        
    %li
      = "Owner: "
      = link_to(event.client_owner.full_name, user_path(event.client_owner))
    %li
      = "Schedule Shifts: "
      - event.event_days.each do |day|  
        = link_to(day.date.strftime("%A"), event_event_day_path(event,day.id))
    %li
      = link_to("Jobs: #{event.jobs.count}", event_jobs_path(event))
    %li
      = link_to("Applications Received: #{event.applications.count}", event_application_for_events_path(event))      
    %li
      = "Shifts Filled: #{}  "    

