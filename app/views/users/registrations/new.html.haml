- content_for :login_title do  
  %h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .row
    .col-md-4.offset-md-4
      = f.error_notification
      .inputs
        = f.input :email, required: true, autofocus: true, input_html: { class: "signin-text", autocomplete: 'off' }
        = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "signin-text-password", autocomplete: 'off' }
        = f.input :password_confirmation, required: true, input_html: { class: "signin-text-password", autocomplete: 'off' }
      .actions.text-right
        = f.button :submit, "Sign up", class: "signin-button"
      = render "users/shared/links"
