%h5
  = "Current Information"

.user-details.panel.default
  .row
    = simple_form_for @user, :html => { :class => 'form-inline' } do |f|
      = f.error_notification  
      .col-md-4
        = image_tag @user.avatar.url(:thumb)
      .col-md-8
        .inputs
          = f.input :avatar, label: false    
      .col-md-12
        .actions.text-right
          = f.button :submit, "Update Avatar"
.user-details.panel.default
  .row
    .col-md-12        
      = @user.full_name
      %br
      = @user.email
      %br
      = @user.mobile_number
      %hr      
  .row
    .col-md-12         
      %br
      = @user.birthday
/ %br
/ %b Shifts made:
/ = @user.shifts_made
/ %br
/ %b Shifts missed:
/ = @user.shifts_missed
/ %br
/ %b Apps accepted:
/ = @user.apps_accepted
/ %br
/ %b Hours worked:
/ = @user.hours_worked
/ %br
/ %p
/   %b Rating:
/   = @user.rating

/ - if user_signed_in?
/   = link_to('Edit login info', edit_user_registration_path)


