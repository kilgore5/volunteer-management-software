- content_for :login_title do  
  %h2 Log in
= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: "off" }) do |f|
  .row
    .col-md-4.offset-md-4
      = f.error_notification
      .inputs
        = f.input :email, required: false, autofocus: true, input_html: { class: "signin-text", autocomplete: 'off' }
        = f.input :password, required: false, input_html: { class: "signin-text-password", autocomplete: 'off' }
        = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
      .actions
        = f.button :submit, "Log in", class: "signin-button"
      = render "users/shared/links"
